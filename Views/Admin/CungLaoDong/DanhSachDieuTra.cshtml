@{
    int record_id = 1;
    var Xa = (IEnumerable<QLVL_Binh.Models.Systems.danhmuchanhchinh>)ViewData["Xa"]!;
    var Huyen = (IEnumerable<QLVL_Binh.Models.Systems.danhmuchanhchinh>)ViewData["Huyen"]!;

}
@model IEnumerable<QLVL_Binh.Models.Systems.kybaocao>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });

        $(function () {
            $('#huyen,#xa,#kydieutra,#tinhtrang').change(function () {
                var current_path_url = '/CungLaoDong/DanhSachDieuTra?';
                var huyen = '&huyen=' + $('#huyen').val();
                var xa = '&xa=' + $('#xa').val();
                var url = current_path_url + huyen + xa;
                window.location.href = url;
            })
        });
                /*
        function updateInput() {
            var selectedOption = document.getElementById("Madiaban");
            var selectedLabel = selectedOption.options[selectedOption.selectedIndex].getAttribute("data-label");
            document.getElementById("test").value = selectedLabel;
        }
        */
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>@ViewData["title"]</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <a class="btn btn-primary font-weight-bolder" asp-controller="CungLaoDong" asp-action="DanhSachDieuTra_Create">
                <i class="la la-plus"></i>Thêm mới
            </a>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-3">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Huyện</label>
                    @* <select class="form-control" id="Madiaban" name="Madiaban" onchange="updateInput()"> *@
                    <select class="form-control" id="huyen" name="huyen">
                        @foreach (var huyen in Huyen)
                        {
                            <!option value="@huyen.maquocgia" @((string)ViewData["mahuyen"]! == huyen.maquocgia ? "selected" : "")>@huyen.name</!option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-3">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Xã</label>
                    <select class="form-control" id="xa" name="xa">
                        @foreach (var xa in Xa)
                        {
                            <!option value="@xa.id" @((string)ViewData["maxa"]! == xa.id!.ToString() ? "selected" : "")>@xa.name</!option>
                        }
                    </select>
                </div>
            </div>

        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Đơn vị</th>
                    <th>Nội dung</th>
                    <th>Kỳ điều tra</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(record_id++)</td>
                            <td>@item.donvi</td>
                            <td>@item.noidung</td>
                            <td>@item.kydieutra</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
