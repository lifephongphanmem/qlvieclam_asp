@{
    int record_id = 1;
    var model_ct = (IEnumerable<QLVL_Binh.Models.Systems.PhienGiaoDichVL.phiengiaodichvl_ct>)ViewData["model_ct"]!;
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin chi tiết phiên giao dịch việc làm</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
        <div class="card-toolbar">
        </div>
    </div>
    <hr />
    <div class="card-body" id="frm_data_chitiet">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Tên doanh nghiệp</th>
                    <th>Vị trí tuyển</th>
                    <th>Số lượng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (model_ct != null)
                {
                    @if (model_ct != null)
                    {
                        @foreach (var item in model_ct)
                        {
                            <tr>
                                <td style="text-align:center">@(record_id++)</td>
                                <td class="active">@item.name</td>
                                <td>@item.vitri</td>
                                <td>@item.soluong</td>
                                <td>
                                    <button type="button" data-target="#DeleteCt_Modal" data-toggle="modal"
                                            onclick="GetDeleteCt('@item.id')" class="btn btn-sm btn-clean btn-icon" title="Xóa chi tiết">
                                        <i class="icon-lg la la-trash text-danger"></i>
                                    </button>

                                    @* <a class="btn btn-sm btn-clean btn-icon" asp-controller="PhienGiaoDichVL" asp-action="DeleteDetail"
                        asp-route-id="@item.id" title="Xóa">
                        <i class="la la-plus"></i>
                        </a> *@
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>

<!--Delete Modal-->
@* <form asp-controller="PhienGiaoDichVL" asp-action="DeleteDetail" method="post" enctype="multipart/form-data"> *@
    <div class="modal fade" id="DeleteCt_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h3 class="card-label">
                        Đồng ý xóa thông tin chi tiết phiên giao dịch?
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <input id="id_deletect" name="id_deletect" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-danger font-weight-bold" onclick="SetDeleteCt()">Xóa</button>
                </div>

            </div>
        </div>
    </div>
@* </form> *@
<script>
    function GetDeleteCt(id) {
        document.getElementById("id_deletect").value = id;
    }

    function SetDeleteCt() {
        $.ajax({
            url: '/PhienGiaoDichVL/DeleteDetail',
            type: 'POST',
            data: {
                id: $('#id_deletect').val()
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    $('#frm_data_chitiet').replaceWith(data.message);
                }
                $('#DeleteCt_Modal').modal("hide");
            }
        })
    }
</script>