@{
    var dnTuyendung = (IEnumerable<QLVL_Binh.ViewModels.Systems.VM_TuyenDung>)ViewData["dnTuyendung"]!;
}
@model QLVL_Binh.Models.Systems.PhienGiaoDichVL.phiengiaodichvl
@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });


    </script>
}
<div class="card card-custom">
    <div class="card-header ribbon ribbon-top ribbon-ver">
        <div class="card-title">
            <h3 class="card-label">Thông tin phiên giao dịch việc làm</h3>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="PhienGiaoDichVL" asp-action="Store" method="post" enctype="multipart/form-data" id="frm_pgdvl_store">
        <div class="card-body">
            <div class="mb-3 font-weight-bold font-size-lg">
                <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ</label>
            </div>
            <div class="row">
                <div class="col-xl-3">
                    <div class="form-group">
                        <label><b>Mã phiên</b></label>
                        <input type="text" class="form-control" asp-for="magd" value="@ViewData["magd"]" readonly/>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label><b>Tên phiên</b></label>
                        <input type="text" class="form-control" asp-for="name" />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label><b>Số người lao động tham gia</b></label>
                        <input type="text" class="form-control" asp-for="nguoilaodong" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group">
                        <label><b>Huyện</b></label>
                        <input type="text" class="form-control" value="@ViewData["tenhuyen"]" readonly asp-for="huyen" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group">
                        <label><b>Xã</b></label>
                        <input type="text" class="form-control" value="@ViewData["tenxa"]" readonly asp-for="xa" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="form-group">
                        <label><b>Thêm vào phiên làm việc</b></label>
                        <button type="button" class="form-control" data-target="#Add_Modal" data-toggle="modal">
                            <i class="icon-lg la la-edit text-primary"></i>Thêm chi tiết
                        </button>
                    </div>
                </div>
            </div>


            @await Html.PartialAsync("~/Views/Admin/PhienGiaoDichVL/Chitiet.cshtml")

        </div>
        <div class="card-footer" style="text-align:center">
            <a asp-controller="PhienGiaoDichVL" asp-action="Index" asp-route-user="@ViewData["user"]" class="btn btn-danger">
                <i class="la la-reply"></i>Quay lại
            </a>&ensp;
            <button type="reset" class="btn btn-secondary"><i class="la la-refresh"></i>Nhập lại</button>&ensp;
            <button type="submit" class="btn btn-primary mr-2"><i class="la la-check"></i>Thêm mới</button>
        </div>
    </form>
    <!--end::Form-->
</div>

<!--Create Modal-->
    <div class="modal fade" id="Add_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label text-dark">
                        Thông tin tuyển dụng của doanh nghiệp
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                <table class="table table-striped table-bordered table-hover" id="add_detail_table">
                    <thead>
                        <tr style="text-align:center">
                            <th>Doanh nghiệp</th>
                            <th>Tin tuyển dụng</th>
                            <th>Vị trí tuyển</th>
                            <th>Số lượng tuyển</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (dnTuyendung != null)
                        {
                            @foreach(var item in dnTuyendung)
                            {
                                <tr>
                                    <td>@item.doanhnghiep</td>
                                    <td>@item.noidung</td>
                                    <td>@item.vitri</td>
                                    <td>@item.soluong</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-clean btn-icon" title="Thêm chi tiết"
                                                onclick="SetAddDetail('@item.doanhnghiep','@item.noidung','@item.vitri','@ViewData["tenxa"]','@ViewData["tenhuyen"]','@ViewData["magd"]','@item.user','@item.soluong')">
                                            <i class="icon-lg la la-plus text-success"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        
                    </tbody>
                </table>
                </div>
                <div class="modal-footer">
                    @* <button type="reset" class="btn btn-default font-weight-bold" data-dismiss="modal">Đóng</button> *@
                <button type="button" class="btn btn-primary font-weight-bold" onclick="CreateValidate('@ViewData["magd"]')">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>


<script>

    function SetAddDetail(doanhnghiep, noidung, vitri, xa, huyen,magd,user,soluong) {
        $.ajax({
            url: '/PhienGiaoDichVL/AddDetail',
            type: 'POST',
            data: {
                doanhnghiep: doanhnghiep,
                noidung: noidung,
                vitri: vitri,
                xa:xa,
                huyen:huyen,
                magd:magd,
                user: user,
                soluong: soluong
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#add_detail_table').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function CreateValidate(magd) {
        $.ajax({
            url: '/PhienGiaoDichVL/Chitiet',
            type: 'POST',
            data: {
                magd: magd,
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    $('#frm_data_chitiet').replaceWith(data.message);
                    $(document).ready(function () {
                        TableManaged4.init();
                    });
                    toastr.success("Cập nhật thành công!!!", "Thành công!");
                    $('#Add_Modal').modal("hide");
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }
</script>