@{
    ViewData["Title"] = "Phiên giao dịch việc làm";
    int record_id = 1;
    
}
@model IEnumerable<QLVL_Binh.ViewModels.Systems.VM_PhienGiaoDich.VM_PhienGiaoDich>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });


    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>Phiên giao dịch việc làm</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <a class="btn btn-primary font-weight-bolder" asp-controller="PhienGiaoDichVL" asp-action="Create"
               asp-route-huyen="@ViewData["tenhuyen"]" asp-route-xa="@ViewData["tenxa"]" style="float:right">
                <i class="la la-plus"></i>Tạo phiên giao dịch việc làm
            </a>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Tên phiên</th>
                    <th>Số doanh nghiệp tham gia</th>
                    <th>Nhu cầu tuyển</th>
                    <th>Số lao động tham gia</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(record_id++)</td>
                            <td>@item.name</td>
                            <td>@item.doanhnghiep</td>
                            <td>@item.vitri</td>
                            <td>@item.nguoilaodong</td>
                            <td>@(item.trangthai == "xd" ? "Xét duyệt" : "Chưa xét duyệt")</td>
                            <td>
                                <a class="btn btn-sm btn-clean btn-icon" asp-controller="PhienGiaoDichVL" asp-action="Edit"
                                   asp-route-magd="@item.magd" title="Sửa">
                                    <i class="la la-plus"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="SetDelete('@item.id')">
                                    <i class="icon-lg la la-trash text-danger"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("~/Views/Admin/PhienGiaoDichVL/Modal.cshtml")
</div>
