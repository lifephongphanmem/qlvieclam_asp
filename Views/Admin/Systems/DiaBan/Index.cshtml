@{
    ViewData["Title"] = "Địa bàn";
}
@model IEnumerable<QLVL_Binh.Models.Systems.danhmuchanhchinh>


@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });


    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>Địa bàn</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <button type="button" class="btn btn-primary font-weight-bolder" data-target="#Create_Modal" data-toggle="modal">Thêm mới</button>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr class="text-center">
                    <th colspan="3" rowspan="1">STT</th>
                    <th rowspan="2">Tên khu vực hành chính</th>
                    <th rowspan="2">Mã khu vực hành chính</th>
                    <th rowspan="2">Phân cấp</th>
                    <th rowspan="2">Thao tác</th>
                </tr>
                <tr class="text-center" role="row">
                    <th width="3%" class="sorting_disabled" rowspan="1" colspan="1" style="width: 21.75px;">T</th>
                    <th width="3%" class="sorting_disabled" rowspan="1" colspan="1" style="width: 21.75px;">H</th>
                    <th width="3%" class="sorting_disabled" rowspan="1" colspan="1" style="width: 21.75px;">X</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (item.capdo == "T")
                            {
                                <td>A</td>
                                <td></td>
                                <td></td>
                            }
                            else if (item.capdo == "H")
                            {
                                <td></td>
                                <td>@Helpers.ConvertIntToRoman(item.stt++)</td>
                                <td></td>
                            }
                            else if (item.capdo == "X")
                            {
                                <td></td>
                                <td></td>
                                <td>@(item.stt++)</td>
                            
                            }
                            
                            <td>@item.name</td>
                            <td>@item.maquocgia</td>
                            <td style="text-align:center">
                                @if (item.capdo == "T")
                                {
                                    <span style="width: 150px;">
                                        <span class="label font-weight-bold label-lg label-light-info label-inline">Tỉnh</span>
                                    </span>
                                }
                                else if (item.capdo == "H")
                                {
                                    <span style="width: 150px;">
                                        <span class="label font-weight-bold label-lg label-light-success label-inline">Huyện</span>
                                    </span>
                                }
                                else
                                {
                                    <span style="width: 150px;">
                                        <span class="label font-weight-bold label-lg label-light-primary label-inline">Xã</span>
                                    </span>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa" data-target="#Edit_Modal" data-toggle="modal" onclick="SetEdit('@item.id')">
                                    <i class="icon-lg la la-edit text-primary"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="SetDelete('@item.id')">
                                    <i class="icon-lg la la-trash text-danger"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("~/Views/Admin/Systems/DiaBan/Modal.cshtml")
</div>
