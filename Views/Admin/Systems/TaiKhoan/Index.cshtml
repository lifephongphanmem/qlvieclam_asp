@{
    ViewData["Title"] = "Tài khoản";
    int record_id = 1;
}
@model IEnumerable<QLVL_Binh.Models.Systems.Users>

@{

}

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });

        $(function () {
            $('#type').change(function () {
                var current_path_url = '/DanhsachDN?';
                var type = '&type=' + $('#type').val();
                var url = current_path_url + type;
                window.location.href = url;
            })
        });
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>Tài khoản</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <button type="button" class="btn btn-primary font-weight-bolder" data-target="#Create_Modal" data-toggle="modal">Thêm mới</button>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Loại tài khoản</label>
                    <select class="form-control" id="type" name="type">
                        <option value="2">Doanh nghiệp</option>
                        <option value="1">Đơn vị hành chính</option>
                        <option value="3">Hệ thống</option>
                    </select>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr class="text-center">
                    <th>STT</th>
                    <th>Tên tài khoản</th>
                    <th>Tài khoản truy cập</th>
                    <th>Thông tin đơn vị</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight:bold">@(record_id++)</td>
                            <td style="font-weight:bold">@item.name</td>
                            <td style="font-weight:bold;color:blue">@item.username</td>
                            <td>@item.DonViQuanLy</td>
                            <td style="text-align:center">
                                <span style="width: 112px;">
                                    @if (item.status == 1)
                                    {
                                        <span class="label font-weight-bold label-lg  label-light-info label-inline">Đã kích hoạt</span>
                                    }
                                    else if (item.status == 0)
                                    {
                                        <span class="label font-weight-bold label-lg label-danger label-inline">Chưa kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="label font-weight-bold label-lg  label-light-success label-inline">Đang bị khóa</span>
                                    }
                                </span>
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa" data-target="#Edit_Modal" data-toggle="modal" onclick="SetEdit('@item.Id')">
                                    <i class="icon-lg la la-edit text-primary"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="SetDelete('@item.Id')">
                                    <i class="icon-lg la la-trash text-danger"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("~/Views/Admin/Systems/TaiKhoan/Modal.cshtml")
</div>
