@model QLVL_Binh.Models.Systems.company
<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @ViewData["name"]
            </h3>
        </div>
        <div class="card-toolbar">
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Mã số doanh nghiệp</label>
                    <input type="text" class="form-control" asp-for="masodn" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Mã số DKKD</label>
                    <input type="text" class="form-control" asp-for="dkkd" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Tình trạng hoạt động</label>
                    <select type="text" class="form-control" asp-for="Public">
                        <option value="1">Hoạt động</option>
                        <option value="0">Dừng</option>
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="tel" class="form-control" asp-for="phone" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Fax</label>
                    <input type="text" class="form-control" asp-for="fax" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Website</label>
                    <input type="text" class="form-control" asp-for="website" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="email" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Tỉnh</label>
                    <select type="text" class="form-control" asp-for="tinh">
                        @if (Tinh != null)
                        {
                            foreach (var item in Tinh)
                            {
                                <option value="@item.maquocgia">@item.name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Huyện/Thị xã/Thành phố</label>
                    <select type="text" class="form-control" asp-for="huyen">
                        @if (Huyen != null)
                        {
                            foreach (var item in Huyen)
                            {
                                <option value="@item.maquocgia">@item.name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Xã/Phường</label>
                    <select type="text" class="form-control" asp-for="xa">
                        @if (Xa != null)
                        {
                            foreach (var item in Xa)
                            {
                                <option value="@item.maquocgia">@item.name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-12">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" asp-for="address" />
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Khu công nghiệp</label>
                    <select type="text" class="form-control" asp-for="khucn">
                        @foreach (var item in @Helpers.KhuCN())
                        {
                            <option value="@item.MaKhuCN">@item.TenKhuCN</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Loại hình doanh nghiệp</label>
                    <select type="text" class="form-control" asp-for="loaihinh">
                        @foreach (var dv2 in dvhcsn.Where(x => x.capdo == 2))
                        {
                            <optgroup label="@dv2.tenhanhchinhsunghiep">
                                @{
                                    var dv3 = dvhcsn.Where(t => t.magoc == dv2.maso);
                                }
                                @foreach (var item in dv3)
                                {
                                    <!option value="@item.maso">@item.tenhanhchinhsunghiep</!option>
                                }
                            </optgroup>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Ngành nghề</label>
                    <select type="text" class="form-control" asp-for="nganhnghe">
                        @foreach (var item in Helpers.NganhNgheKinhDoanh())
                        {
                            <option value="@item.MaNghanhNghe">@item.TenNghanhNghe</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group">
                    <label>Ảnh giấy DKKD</label>
                    <input type="file" name="image" asp-for="image" class="form-control">
                </div>
            </div>
        </div>
    </div>
</div>


