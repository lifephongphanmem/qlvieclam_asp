<form asp-controller="DanhsachDN" asp-action="Store" method="post" enctype="multipart/form-data" id="DanhsachDN_store">
    <div class="modal fade" id="Create_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label text-dark">
                        Thông tin doanh nghiệp
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row text-left">
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Mã số kinh doanh</b></label>
                                <input type="text" id="dkkd_create" name="dkkd_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Tên doanh nghiệp</b></label>
                                <input type="text" id="name_create" name="name_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Quy mô</b></label>
                                <input type="text" id="quymo_create" name="quymo_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Tình trạng hoạt động</b></label>
                                <select type="text" id="Public_create" name="Public_create" class="form-control">
                                    <option value="1">Hoạt động</option>
                                    <option value="0">Dừng</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Số điện thoại </b></label>
                                <input type="text" id="phone_create" name="phone_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Fax</b></label>
                                <input type="text" id="fax_create" name="fax_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b> Website</b></label>
                                <input type="text" id="website_create" name="website_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Email</b></label>
                                <input type="text" id="email_create" name="email_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Tỉnh</b></label>
                                <select type="text" id="tinh_create" name="tinh_create" class="form-control">
                                    @if (Tinh != null)
                                    {
                                        foreach (var item in Tinh)
                                        {
                                            <option value="@item.maquocgia">@item.name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Huyện</b></label>
                                <select type="text" id="huyen_create" name="huyen_create" class="form-control" onchange="getListXa()">
                                    @if (Huyen != null)
                                    {
                                        foreach (var item in Huyen)
                                        {
                                            <option value="@item.maquocgia">@item.name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Xã</b></label>
                                <select type="text" id="xa_create" name="xa_create" class="form-control">
                                    @if (Xa != null)
                                    {
                                        foreach (var item in Xa)
                                        {
                                            <option value="@item.maquocgia">@item.name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Tình trạng hoạt động</b></label>
                                <select type="text" id="khuvuc_create" name="khuvuc_create" class="form-control">
                                    <option value="1">Thành thị</option>
                                    <option value="0">Nông thôn</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Địa chỉ</b></label>
                                <input type="text" id="address_create" name="address_create" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Khu công nghiệp </b></label>
                                <select type="text" id="khucn_create" name="khucn_create" class="form-control">
                                    @foreach (var item in Helpers.KhuCN())
                                    {
                                        <option value="@item.MaKhuCN">@item.TenKhuCN</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Loại hình doanh nghiệp</b></label>
                                <select type="text" id="loaihinh_create" name="loaihinh_create" class="form-control">
                                    @foreach (var dv2 in dvhcsn.Where(x => x.capdo == 2))
                                    {
                                        <optgroup label="@dv2.tenhanhchinhsunghiep">
                                            @{
                                                var dv3 = dvhcsn.Where(t => t.magoc == dv2.maso);
                                            }
                                            @foreach (var item in dv3)
                                            {
                                                <!option value="@item.maso">@item.tenhanhchinhsunghiep</!option>
                                            }
                                        </optgroup>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label><b>Khu công nghiệp </b></label>
                                <select type="text" id="nghanhnghe_create" name="nghanhnghe_create" class="form-control">
                                    @foreach (var item in Helpers.NganhNgheKinhDoanh())
                                    {
                                        <option value="@item.MaNghanhNghe">@item.TenNghanhNghe</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="button" class="btn btn-primary font-weight-bold" onclick="CreateValidate()">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</form>

