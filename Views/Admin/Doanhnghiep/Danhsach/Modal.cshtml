<script>
    const input = document.getElementById("price");

    input.addEventListener("keypress", function (event) {
        const value = input.value;
        if (!event.key.match(/[0-9.]/)) {
            event.preventDefault();
        } else {
            const index = value.length;
            if (index % 4 === 0 && index !== 0) {
                let newValue = value.slice(0, index) + ",";
                input.value = newValue;
            }
        }
    });
</script>
<script>
    function CreateValidate() {
        if ($('#dkkd_create').val() == '') {
            toastr.error("Mã số kinh doanh không được để trống!", "Lỗi!!!")
        } else {
            if ($('#name_create').val() == '') {
                toastr.error("Tên doanh nghiệp không được để trống!", "Lỗi!!!")
            } else {
                if ($('#quymo_create').val() == '') {
                    toastr.error("Quy mô không được để trống!", "Lỗi!!!")
                } else {
                    if ($('#phone_create').val() == '') {
                        toastr.error("Số điện thoại không được để trống!", "Lỗi!!!")
                    } else {
                        if ($('#fax_create').val() == '') {
                            toastr.error("Fax không được để trống!", "Lỗi!!!")
                        } else {
                            if ($('#website_create').val() == '') {
                                toastr.error("Website không được để trống!", "Lỗi!!!")
                            } else {
                                if ($('#email_create').val() == '') {
                                    toastr.error("Email không được để trống!", "Lỗi!!!")
                                } else {
                                    if ($('#address_create').val() == '') {
                                        toastr.error("Địa chỉ không được để trống!", "Lỗi!!!")
                                    } else {
                                        document.getElementById("DanhsachDN_store").submit();
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    function getListXa() {
        var mahuyen = document.getElementById("huyen_create").value;
        var maxa = document.getElementById("xa_create");

        maxa.innerHTML = "";
        fetch(`/DanhsachDN/GetXa?mahuyen=${mahuyen}`)
            .then(response => response.json())
            .then(data => {
                data.forEach(function (item) {
                    var option = document.createElement("option");
                    option.value = item.maquocgia;
                    option.text = item.name;
                    maxa.add(option);
                });
            })
            .catch(error => console.error('Error:', error));

    }

    function SetPrint(id) {
        document.getElementById("id_print1").value = id;
        document.getElementById("id_print2").value = id;
    }

</script>