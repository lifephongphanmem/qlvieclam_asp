@{
    ViewData["Title"] = "Danh mục các chấn thương trong môi trường lao động";
    //int record_id = 1;
}
@model IEnumerable<QLVL_Binh.Models.Systems.chanthuong>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });


    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>Các yếu tố có hại trong môi trường lao động</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <button type="button" class="btn btn-primary font-weight-bolder" data-target="#Create_Modal" data-toggle="modal">Thêm mới</button>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Tên chấn thương</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.stt</td>
                            @if(item.magoc==null || item.magoc == "")
                            {
                                <td style="font-weight:bold;font-style:italic">@item.tenchanthuong</td>
                            }else{
                                <td>@item.tenchanthuong</td>
                            }
                            
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @* @await Html.PartialAsync("~/Views/Admin/Danhmuc/TrinhDoCMKT/Modal.cshtml") *@
</div>
